
#Practica de situacion del calor

grados_centigrados_respuesta = int(input("Â¿Cuantos grados centigrados estamos actualmente ?"))

if  (grados_centigrados_respuesta < 25):
    print("es hora de sacar el sueter cucarachiento")

elif  (grados_centigrados_respuesta > 35):
    print("ta juerte la calor")
elif (grados_centigrados_respuesta > 24 and grados_centigrados_respuesta < 31 ):
    print("se antoja un pozol")